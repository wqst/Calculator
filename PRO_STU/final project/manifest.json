{
  "browser_action": {
    "default_icon": "share.png",
    "default_popup": "popup.html",
    "default_title": "Share"
  },
  "description": "Share everything with Facebook, Twitter and Google+",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "name": "One-button Share",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "128": "share.png"
  },
  "manifest_version": 2,
  "version": "2.1.2"
}